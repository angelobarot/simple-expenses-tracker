{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "paths": {
      "@config/*": ["src/config/*"],
      "@expenses/*": ["src/modules/expenses/*"],
      "@users/*": ["src/modules/users/*"],
    },
    "moduleResolution": "Node"
  },
  "compileOnSave": true
}
